<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ocft.gateway.mapper.BackonMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.ocft.gateway.entity.Backon">
        <result column="id" property="id"/>
        <result column="system" property="system"/>
        <result column="domain" property="domain"/>
        <result column="suffix" property="suffix"/>
        <result column="status" property="status"/>
        <result column="description" property="description"/>
        <result column="success_code" property="successCode"/>
        <result column="success_value" property="successValue"/>
        <result column="is_deleted" property="isDeleted"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_by" property="createBy"/>
        <result column="update_by" property="updateBy"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id,
        system, domain, suffix, status, description, success_code, success_value, is_deleted, create_time, update_time, create_by, update_by
    </sql>

    <select id="queryBackons" resultType="com.ocft.gateway.entity.Backon"
            parameterType="com.ocft.gateway.web.dto.request.BackonRequest">
        SELECT
        b.id,
        b.system,
        b.domain,
        b.suffix,
        b.description,
        b.success_code,
        b.success_value,
        b.status,
        b.create_time,
        b.create_by,
        b.update_time,
        b.update_by
        from backon b
        where b.is_deleted = '0'
        <if test="req.system!=null and req.system!=''">
            and b.system = #{ req.system,jdbcType=VARCHAR}
        </if>
        <if test="req.domain!=null and req.domain!=''">
            and b.domain = #{ req.domain,jdbcType=VARCHAR}
        </if>
        <if test="req.suffix!=null and req.suffix!=''">
            and b.suffix = #{ req.suffix,jdbcType=VARCHAR}
        </if>
        <if test="req.description!=null and req.description!=''">
            and b.description = #{ req.description,jdbcType=VARCHAR}
        </if>
        <if test="req.status!=null and req.status!=''">
            and b.status = #{ req.status,jdbcType=VARCHAR}
        </if>
    </select>

<!--根据id删除-->
    <update id="deleteByIds" parameterType="list">
        UPDATE backon
        SET is_deleted = '1'
        where id in
        <foreach item="item" index="index" collection="ids" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>


</mapper>
